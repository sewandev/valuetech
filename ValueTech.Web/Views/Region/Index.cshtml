@model IEnumerable<ValueTech.Api.Contracts.Responses.RegionResponse>

@{
    ViewData["Title"] = "Regiones";
}

<h1>Listado de Regiones</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Región</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdRegion</td>
                <td>@item.Nombre</td>
                <td class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Comuna" asp-action="Index" asp-route-regionId="@item.IdRegion" class="btn btn-primary btn-sm">Ver Comunas</a>
                    <partial name="_DeleteButton" model="@(new { Action = "DeleteRegion", RouteValues = new { id = item.IdRegion }, ConfirmMessage = "¿Está seguro de que desea eliminar esta región?" })" />
                </td>
            </tr>
        }
    </tbody>
</table>
