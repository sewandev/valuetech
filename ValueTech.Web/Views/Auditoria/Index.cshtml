@model IEnumerable<ValueTech.Data.Models.Auditoria>

@{
    ViewData["Title"] = "Auditoría";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Registro de Auditoría</h1>
            <p class="text-muted">Trazabilidad de cambios en el sistema</p>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3" style="background-color: var(--vt-primary);">
            <h6 class="m-0 font-weight-bold text-white">Eventos Registrados</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Usuario</th>
                            <th>IP</th>
                            <th>Acción</th>
                            <th>Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.IdAuditoria</td>
                                <td>@log.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>
                                    <span class="badge bg-info text-dark">@log.Usuario</span>
                                </td>
                                <td>@log.IpAddress</td>
                                <td>@log.Accion</td>
                                <td class="text-muted small">@log.Detalle</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
