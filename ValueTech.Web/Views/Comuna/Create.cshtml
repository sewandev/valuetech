@model ValueTech.Web.Models.ComunaFormViewModel

@{
    ViewData["Title"] = "Crear Comuna";
}

<h1>Crear Nueva Comuna</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-regionId="@Model.IdRegion">
            <partial name="_ComunaForm" model="Model" />

            <div class="form-group mt-3">
                <input type="submit" value="Crear Comuna" class="btn btn-success" />
                <a asp-action="Index" asp-route-regionId="@Model.IdRegion" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
